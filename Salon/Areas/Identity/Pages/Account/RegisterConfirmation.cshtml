@page
@model RegisterConfirmationModel
@{
    ViewData["Title"] = "Potwierdzenie rejestracji";
}

<h1>@ViewData["Title"]</h1>
@{
    if (@Model.DisplayConfirmAccountLink)
    {
<p>
    <a id="confirm-link" href="@Model.EmailConfirmationUrl">Nacisnij tutaj, aby potwierdzić rejestrację nowego konta</a>
</p>
    }
    else
    {
<p>
        Sprawdź swój email w celu potwierdzenia konta.
</p>
    }
}
